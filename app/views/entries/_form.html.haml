= form_for(@entry) do |f|
  - if @entry.errors.any?
    %div{:id => "error_explanation"}
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"

      %ul
      - @entry.errors.full_messages.each do |message|
        %li= message

  %div{:class => "field"}
    = f.label :title 
    %br
    = f.text_field :title
  %div{:class => "field"}
    = f.label :body 
    %br
    = f.text_area :body
  %div{:class => "actions"}
    = f.submit
